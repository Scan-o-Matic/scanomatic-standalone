{
  "linters": {
    "python_pep8": {
      "type": "pep8",
      "include": "(\\.py$)"
    },
    "python_pyflakes": {
      "type": "pyflakes",
      "include": "(\\.py$)"
    },
    "xml": {
      "type": "xml",
      "include": "(\\.xml$)"
    },
    "jshint": {
      "type": "jshint",
      "include": "(\\.js$)",
      "exclude": "(\\.min.js$|-debug.js$)"
    }
  }
}
